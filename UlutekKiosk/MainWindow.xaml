<Window x:Class="UlutekKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UlutekKiosk"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" WindowStartupLocation="Manual" WindowState="Maximized" ResizeMode="NoResize">
    <Grid>
        <Image Name="SlaytShow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
        <ProgressBar Name="SlaytShowProgress" Height="10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderBrush="White" BorderThickness="0,1,0,0" Foreground="#FF3F9FB4">
            <ProgressBar.Background>
                <SolidColorBrush Color="Black"/>
            </ProgressBar.Background>
        </ProgressBar>
    </Grid>
</Window>
